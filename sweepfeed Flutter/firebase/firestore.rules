rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles are readable by anyone but only writable by the user
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Sweepstakes are readable by anyone
    match /sweepstakes/{sweepstakesId} {
      allow read: if true;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)/roles/admin);
    }
    
    // User saved sweepstakes
    match /users/{userId}/savedSweepstakes/{sweepstakesId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User entries
    match /users/{userId}/entries/{entryId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Agent settings are only accessible by admins
    match /agentSettings/{settingId} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)/roles/admin);
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)/roles/admin);
    }
    
    // Crawl sources are only accessible by admins
    match /crawlSources/{sourceId} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)/roles/admin);
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)/roles/admin);
    }
    
    // Crawl logs are only accessible by admins
    match /crawlLogs/{logId} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)/roles/admin);
      allow write: if false; // Only writeable by cloud functions
    }
  }
}
