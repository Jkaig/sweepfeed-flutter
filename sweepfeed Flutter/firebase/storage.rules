rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Contest images can be read by anyone but only written by admins
    match /contests/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)/roles/admin);
    }
    
    // User profile images
    match /profiles/{userId}/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
